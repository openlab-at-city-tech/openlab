{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "customTemplates": [
    {
      "name": "blank",
      "postTypes": ["page", "post"],
      "title": "Blank"
    },
    {
      "name": "full-width",
      "postTypes": ["page", "post"],
      "title": "Full Width Template"
    },
    {
      "name": "blog-alternative",
      "postTypes": ["page"],
      "title": "Blog (Alternative)"
    },
    {
      "name": "about",
      "postTypes": ["page"],
      "title": "About"
    },
    {
      "name": "contact",
      "postTypes": ["page"],
      "title": "Contact"
    }
  ],
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "color": "#1C1917",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "color": "#71717A",
          "name": "Mono 2",
          "slug": "mono-2"
        },
        {
          "color": "#FFFFFF",
          "name": "Contrast Light",
          "slug": "contrast-light"
        },
        {
          "color": "#000000",
          "name": "Contrast Dark",
          "slug": "contrast-dark"
        },
        {
          "color": "#FFFFFF",
          "name": "Base",
          "slug": "base"
        },
        {
          "color": "#1C1917",
          "name": "Mono 1",
          "slug": "mono-1"
        },
        {
          "color": "#D4D4D8",
          "name": "Mono 3",
          "slug": "mono-3"
        },
        {
          "color": "#FAFAFA",
          "name": "Mono 4",
          "slug": "mono-4"
        },
        {
          "color": "#292524",
          "name": "Primary Hover",
          "slug": "primary-hover"
        },
        {
          "color": "#44403C",
          "name": "Featured",
          "slug": "featured"
        }
      ]
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1200px"
    },
    "spacing": {
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "size": "clamp(5px, 1vw, 10px)",
          "slug": "superbspacing-xxsmall",
          "name": "XXSmall"
        },
        {
          "size": "clamp(10px, 2vw, 20px)",
          "slug": "superbspacing-xsmall",
          "name": "XSmall"
        },
        {
          "size": "clamp(20px, 4vw, 40px)",
          "slug": "superbspacing-small",
          "name": "Small"
        },
        {
          "size": "clamp(30px, 6vw, 60px)",
          "slug": "superbspacing-medium",
          "name": "Medium"
        },
        {
          "size": "clamp(40px, 8vw, 80px)",
          "slug": "superbspacing-large",
          "name": "Large"
        },
        {
          "size": "clamp(50px, 10vw, 100px)",
          "slug": "superbspacing-xlarge",
          "name": "Xlarge"
        },
        {
          "size": "clamp(60px, 12vw, 120px)",
          "slug": "superbspacing-xxlarge",
          "name": "XXlarge"
        }
      ],
      "units": ["%", "px", "em", "rem", "vh", "vw"]
    },
    "typography": {
      "dropCap": false,
      "fluid": true,
      "fontFamilies": [
        {
          "fontFace": [
            {
              "fontFamily": "Playfair Display",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "400",
              "src": ["file:./assets/fonts/playfair-display/PlayfairDisplay-Regular.ttf"]
            },
            {
              "fontFamily": "Playfair Display",
              "fontStretch": "normal",
              "fontStyle": "semibold",
              "fontWeight": "600",
              "src": ["file:./assets/fonts/playfair-display/PlayfairDisplay-SemiBold.ttf"]
            },
            {
              "fontFamily": "Playfair Display",
              "fontStretch": "normal",
              "fontStyle": "bold",
              "fontWeight": "700",
              "src": ["file:./assets/fonts/playfair-display/PlayfairDisplay-Bold.ttf"]
            }
          ],
          "fontFamily": "\"Playfair Display\", serif",
          "name": "Playfair Display",
          "slug": "fontprimary"
        },
        {
          "fontFace": [
            {
              "fontFamily": "DM Sans",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "400",
              "src": ["file:./assets/fonts/dm-sans/DMSans-Regular.ttf"]
            },
            {
              "fontFamily": "DM Sans",
              "fontStretch": "normal",
              "fontStyle": "bold",
              "fontWeight": "700",
              "src": ["file:./assets/fonts/dm-sans/DMSans-Bold.ttf"]
            }
          ],
          "fontFamily": "'DM Sans', sans-serif",
          "name": "DM Sans",
          "slug": "fontsecondary"
        }
      ],
      "fontSizes": [
        {
          "fluid": {
            "min": "10px",
            "max": "12px"
          },
          "name": "Tiny",
          "size": "12px",
          "slug": "superbfont-tiny"
        },
        {
          "fluid": {
            "min": "12px",
            "max": "14px"
          },
          "name": "XXSmall",
          "size": "14px",
          "slug": "superbfont-xxsmall"
        },
        {
          "fluid": {
            "min": "16px",
            "max": "16px"
          },
          "name": "XSmall",
          "size": "16px",
          "slug": "superbfont-xsmall"
        },
        {
          "fluid": {
            "min": "14px",
            "max": "18px"
          },
          "name": "Small",
          "size": "18px",
          "slug": "superbfont-small"
        },
        {
          "fluid": {
            "min": "20px",
            "max": "24px"
          },
          "name": "Medium",
          "size": "24px",
          "slug": "superbfont-medium"
        },
        {
          "fluid": {
            "min": "24px",
            "max": "32px"
          },
          "name": "Large",
          "size": "32px",
          "slug": "superbfont-large"
        },
        {
          "fluid": {
            "min": "36px",
            "max": "48px"
          },
          "name": "XLarge",
          "size": "48px",
          "slug": "superbfont-xlarge"
        },
        {
          "fluid": {
            "min": "40px",
            "max": "54px"
          },
          "name": "XXLarge",
          "size": "54px",
          "slug": "superbfont-xxlarge"
        }
      ]
    },
    "useRootPaddingAwareAlignments": true
  },
  "styles": {
    "blocks": {
      "core/button": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-small)",
          "lineHeight": "1.4"
        },
        "variations": {
          "outline": {
            "color": {
              "text": "var(--wp--preset--color--mono-1)"
            },
            "border": {
              "color": "var( --wp--preset--color--mono-3)",
              "style": "solid",
              "width": "1px"
            }
          }
        }
      },
      "core/heading": {
        "color": {
          "text": "var(--wp--preset--color--mono-1)"
        }
      },
      "core/paragraph": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--fontsecondary)",
          "fontSize": "var(--wp--preset--font-size--superbfont-xsmall)",
          "lineHeight": "1.4"
        },
        "color": {
          "text": "var(--wp--preset--color--mono-2)"
        }
      },
      "core/navigation": {
        "elements": {
          "link": {
            ":hover": {
              "typography": {
                "textDecoration": "none"
              }
            },
            ":focus": {
              "typography": {
                "textDecoration": "none"
              }
            },
            ":active": {
              "typography": {
                "textDecoration": "none"
              }
            },
            "typography": {
              "textDecoration": "none"
            }
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-xsmall)"
        }
      },
      "core/post-author-name": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-xsmall)"
        },
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      },
      "core/post-date": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-xsmall)"
        },
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      },
      "core/post-content": {
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--primary)"
            },
            "typography": {
              "textDecoration": "underline"
            }
          }
        }
      },
      "core/post-title": {
        "elements": {
          "link": {
            ":hover": {
              "typography": {
                "textDecoration": "none"
              }
            },
            ":focus": {
              "typography": {
                "textDecoration": "none"
              }
            },
            "typography": {
              "textDecoration": "none"
            }
          }
        }
      },
      "core/comments-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-large)"
        }
      },
      "core/comment-author-name": {
        "elements": {
          "link": {
            ":hover": {
              "typography": {
                "textDecoration": "none"
              }
            },
            ":active": {
              "typography": {
                "textDecoration": "none"
              }
            },
            "typography": {
              "textDecoration": "none"
            }
          }
        }
      },
      "core/comment-date": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-xxsmall)"
        },
        "elements": {
          "link": {
            ":hover": {
              "typography": {
                "textDecoration": "none"
              }
            },
            ":focus": {
              "typography": {
                "textDecoration": "none"
              }
            },
            "typography": {
              "textDecoration": "none"
            }
          }
        }
      },
      "core/comment-edit-link": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-xxsmall)"
        }
      },
      "core/comment-reply-link": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-small)"
        }
      },
      "core/comments-pagination": {
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--40)"
          }
        },
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "none"
            }
          }
        }
      },
      "core/query": {
        "elements": {
          "h2": {
            "typography": {
              "fontSize": "var(--wp--preset--font-size--superbfont-large)"
            }
          }
        }
      },
      "core/query-pagination": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-medium)"
        },
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "none"
            },
            ":hover": {
              "typography": {
                "textDecoration": "none"
              }
            },
            ":focus": {
              "typography": {
                "textDecoration": "none"
              }
            },
            ":active": {
              "typography": {
                "textDecoration": "none"
              }
            }
          }
        }
      },
      "core/site-title": {
        "elements": {
          "link": {
            ":hover": {
              "typography": {
                "textDecoration": "none"
              }
            },
            ":focus": {
              "typography": {
                "textDecoration": "none"
              }
            },
            ":active": {
              "typography": {
                "textDecoration": "none"
              }
            },
            "typography": {
              "textDecoration": "none"
            }
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-medium)",
          "fontWeight": "normal",
          "lineHeight": "1.4"
        }
      },
      "core/separator": {
        "css": " &:not(.is-style-wide):not(.is-style-dots):not(.alignwide):not(.alignfull){width: 100px}"
      }
    },
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--contrast)"
    },
    "elements": {
      "button": {
        "typography": {
          "fontWeight": "600",
          "textTransform": "uppercase"
        },
        "border": {
          "radius": "0px"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--contrast-light)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary-hover)",
            "text": "var(--wp--preset--color--contrast-light)"
          }
        },
        ":focus": {
          "color": {
            "background": "var(--wp--preset--color--primary-hover)",
            "text": "var(--wp--preset--color--contrast-light)"
          }
        },
        ":active": {
          "color": {
            "background": "var(--wp--preset--color--primary-hover)",
            "text": "var(--wp--preset--color--contrast-light)"
          }
        },
        ":visited": {
          "color": {
            "text": "var(--wp--preset--color--contrast-light)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-xlarge)",
          "lineHeight": "1.2"
        },
        "color": {
          "text": "var(--wp--preset--color--mono-1)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-large)",
          "lineHeight": "1.3"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--fontsecondary)",
          "fontWeight": "400",
          "fontSize": "var(--wp--preset--font-size--superbfont-medium)",
          "lineHeight": "1.3"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-small)",
          "lineHeight": "1.4"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-xsmall)",
          "lineHeight": "1.4"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--superbfont-xxsmall)",
          "lineHeight": "1.4"
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--fontprimary)",
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      },
      "link": {
        "color": {
          "text": "inherit"
        },
        ":hover": {
          "typography": {
            "textDecoration": "underline"
          }
        },
        ":focus": {
          "typography": {
            "textDecoration": "underline"
          }
        },
        "typography": {
          "textDecoration": "none"
        }
      }
    },
    "spacing": {
      "blockGap": "1.5rem"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--fontprimary)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "150%"
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Footer"
    },
    {
      "area": "uncategorized",
      "name": "comments",
      "title": "Comments"
    },
    {
      "area": "uncategorized",
      "name": "post-meta",
      "title": "Post Meta"
    }
  ]
}
